<a class="btn outline" href="<%= (adminBase||'/backoffice') %>/orders">← Retour</a>

<section class="section" style="margin-top:12px">
  <h2 style="margin:0 0 10px">Commande <%= order.order_ref %></h2>

  <div style="display:grid;grid-template-columns:1.2fr .8fr;gap:16px">
    <!-- Bloc infos -->
    <div style="background:#fff;border:1px solid var(--line);border-radius:16px;box-shadow:var(--shadow);padding:14px">
      <div style="display:grid;gap:6px">
        <div><strong>Status :</strong> <span class="badge"><%= order.status %></span></div>
        <div><strong>Client :</strong> <%= order.buyer_email %> (<%= order.buyer_name || '—' %>)</div>
        <div><strong>Montant :</strong> <%= order.amount %> <%= order.currency %></div>
        <div><strong>Méthode :</strong> <%= order.payment_method %></div>
        <div><strong>Réf. client :</strong> <%= order.payment_reference_client || '—' %></div>
        <div><strong>Date :</strong> <%= new Date(order.created_at).toLocaleString('fr-FR') %></div>
        <div><strong>Preuve :</strong>
          <% if (order.proof_path) { %>
            <a class="btn" href="<%= (adminBase||'/backoffice') %>/proof/<%= order.id %>" target="_blank">Voir</a>
          <% } else { %> — <% } %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div style="background:#fff;border:1px solid var(--line);border-radius:16px;box-shadow:var(--shadow);padding:14px">
      <h3 style="margin:0 0 8px">Actions</h3>
      <form method="post" action="<%= (adminBase||'/backoffice') %>/orders/<%= order.id %>/mark-paid" style="margin-bottom:8px">
        <button class="btn" type="submit">Marquer PAYÉ</button>
      </form>
      <form method="post" action="<%= (adminBase||'/backoffice') %>/orders/<%= order.id %>/generate-link" style="margin-bottom:8px">
        <button class="btn" type="submit">Générer lien</button>
      </form>
      <form method="post" action="<%= (adminBase||'/backoffice') %>/orders/<%= order.id %>/send-link" style="margin-bottom:8px">
        <button class="btn" type="submit">Envoyer email</button>
      </form>
      <form method="post" action="<%= (adminBase||'/backoffice') %>/orders/<%= order.id %>/reject">
        <button class="btn outline" type="submit">Rejeter</button>
      </form>
    </div>
  </div>

  <% if (photo) { %>
  <div class="section" style="margin-top:16px">
    <h3 style="margin:0 0 8px">Photo</h3>
    <div style="display:flex;gap:16px;align-items:flex-start;flex-wrap:wrap">
      <img src="<%= photo.preview_path %>" alt="" style="width:220px;height:220px;object-fit:cover;border-radius:12px;border:1px solid var(--line)">
      <div style="background:#fff;border:1px solid var(--line);border-radius:16px;box-shadow:var(--shadow);padding:12px">
        <div><strong>Titre :</strong> <%= photo.title %></div>
        <div><strong>Prix :</strong> <%= photo.price %> <%= photo.currency || currency %></div>
        <% if (photo.categories && photo.categories.length) { %>
          <div><strong>Catégories :</strong> <%= photo.categories.join(', ') %></div>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>
</section>